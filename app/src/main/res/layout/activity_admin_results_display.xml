<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkbg"
    tools:context=".admin.results.AdminResultsDisplay">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="56dp"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="56dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="800dp"
                    android:text="Admin Results Stuff"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="408dp"
                    android:layout_height="56dp"
                    android:text="Result Added"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/studentRegistrationNumber"
                    android:layout_width="300dp"
                    android:layout_height="56dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="IT19064932"
                    app:layout_constraintBottom_toTopOf="@+id/moduleName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.405"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    app:layout_constraintVertical_bias="0.0" />

                <EditText
                    android:id="@+id/moduleName"
                    android:layout_width="300dp"
                    android:layout_height="56dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Mobile Application Development"
                    app:layout_constraintBottom_toTopOf="@+id/caMarks"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.405"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/caMarks"
                    android:layout_width="300dp"
                    android:layout_height="56dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:text="87"
                    app:layout_constraintBottom_toTopOf="@+id/grade"
                    tools:layout_editor_absoluteX="45dp" />

                <EditText
                    android:id="@+id/grade"
                    android:layout_width="300dp"
                    android:layout_height="56dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="A"
                    tools:layout_editor_absoluteX="45dp"
                    tools:layout_editor_absoluteY="319dp" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="156dp"
                    android:layout_height="56dp"
                    android:layout_alignParentStart="true"
                    android:entries="@array/ca_period_array"
                    android:prompt="@string/ca_period_prompt"
                    app:layout_constraintEnd_toStartOf="@+id/caYear"
                    app:layout_constraintHorizontal_bias="0.661"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="394dp" />

                <EditText
                    android:id="@+id/caYear"
                    android:layout_width="139dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="48dp"
                    android:ems="10"
                    android:inputType="number"
                    android:text="2019"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteY="394dp" />

                <Button
                    android:id="@+id/updateButton"
                    android:layout_width="102dp"
                    android:layout_height="54dp"
                    android:layout_centerHorizontal="true"
                    android:text="Update"
                    app:layout_constraintEnd_toStartOf="@+id/dltButton"
                    app:layout_constraintHorizontal_bias="0.669"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="488dp" />

                <Button
                    android:id="@+id/dltButton"
                    android:layout_width="98dp"
                    android:layout_height="54dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="88dp"
                    android:text="Delete"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteY="488dp" />

                <Button
                    android:id="@+id/addNewEntry"
                    android:layout_width="241dp"
                    android:layout_height="51dp"
                    android:layout_centerHorizontal="true"
                    android:text="Add New Entry"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.488"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="576dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        //bottom navigation
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:menu="@menu/menu" />

    </FrameLayout>

</RelativeLayout>