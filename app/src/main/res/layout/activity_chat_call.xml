<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000A0102">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/call_background" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profile_image1"
        android:layout_width="200dp"
        android:layout_height="196dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/fm3"
        android:paddingLeft="40px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/callingID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chat_user_name_9"
        android:textColor="#FD7C07"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/profile_image1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="12:32:02"
        android:textColor="#FFC107"
        app:layout_constraintBottom_toTopOf="@+id/profile_image1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/callingID" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/calling_mute"
        android:layout_width="72dp"
        android:layout_height="75dp"
        android:background="@android:drawable/stat_notify_call_mute"
        android:clickable="true"
        android:paddingLeft="40px"
        app:layout_constraintBottom_toBottomOf="@+id/calling_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image1"
        app:layout_constraintVertical_bias="0.366"
        tools:ignore="MissingConstraints">

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/calling_red"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/endcall"
        android:clickable="true"
        android:paddingLeft="40px"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image1"
        app:layout_constraintVertical_bias="0.769"
        tools:ignore="MissingConstraints">

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/calling_video_mute"
        android:layout_width="73dp"
        android:layout_height="74dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/videomute"
        android:clickable="true"
        android:paddingLeft="40px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.68"
        tools:ignore="MissingConstraints">

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/calling_sound"
        android:layout_width="61dp"
        android:layout_height="69dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/volumeup"
        android:clickable="true"
        android:paddingLeft="40px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.681"
        tools:ignore="MissingConstraints">

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>